.box{
  width: 100%;
  height: 400rpx;
  background-color: #090;
  box-sizing: border-box;
  border-top: 1px solid #ddd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.box_day{
  color: #fff;
}
.price{
  color: #fff;
  font-size: 90rpx;
}
.box_month{
  color: #fff;
  font-size: 24rpx;
}
.cumulative{
  color: #fff;
  font-size: 30rpx;
}
/* 费用列表样式 */
.const_list{
  width: 100%;
  overflow: hidden;
  background-color: #fff;
  display: flex;
  flex-wrap: wrap;
}
.const_list .item{
  width: 100%;
  height: 132rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 1px solid #ccc;
}
.left{
  display: flex;
  align-items: center;
}
.img1{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}
.text{
  font-size: 28rpx;
  color: #333;
}
.right{
  display: flex;
  justify-content: center;
  align-items: center;
}
.right_price{
  color: red;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.img2{
  width: 30rpx;
  height: 40rpx;
}